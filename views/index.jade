extends layout

block content
	script(src='https://cdn.socket.io/socket.io-1.3.5.js')
	script(src='/javascripts/client.js')

	.well
		h2 MC-NET Admin Panel

	.container

		.col-md-4
			.panel.panel-default#global-stats
				.panel-heading Global Stats
				.panel-body
					p Players Online
					span#global-players-online.pull-right
					hr
					p Registered Players
					span#global-registered.pull-right
					hr
					p Servers Running
					span#global-servers-running.pull-right

		.col-md-4
			.panel.panel-default
				.panel-heading Game Servers
				.panel-body
					.table-responsive
						table.table.table-striped#game-list
							tbody

		.col-md-4
			.panel.panel-default
				.panel-heading Hub Servers
				.panel-body
					.table-responsive
						table.table.table-striped#hub-list
							tbody

